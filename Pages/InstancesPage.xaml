<ui:Page x:Class="VSenvDesktop.Pages.InstancesPage"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
         Title="实例管理">
    <ScrollViewer>
        <StackPanel Margin="24">
            <!-- 实例选择 -->
            <GroupBox Header="实例" Margin="0,0,0,12">
                <StackPanel Orientation="Horizontal">
                    <ComboBox x:Name="CmbInstances" MinWidth="200" Margin="0,0,8,0"/>
                    <Button x:Name="BtnRefresh" Content="刷新" Click="BtnRefresh_Click"/>
                </StackPanel>
            </GroupBox>

            <!-- 操作按钮 -->
            <UniformGrid Columns="4" Margin="0,0,0,12">
                <Button x:Name="BtnCreate" Content="创建实例" Click="BtnCreate_Click" Margin="4"/>
                <Button x:Name="BtnStart"  Content="启动实例"  Click="BtnStart_Click"  Margin="4"/>
                <Button x:Name="BtnRemove" Content="删除实例" Click="BtnRemove_Click" Margin="4"/>
                <Button x:Name="BtnListExt" Content="已装扩展" Click="BtnListExt_Click" Margin="4"/>
            </UniformGrid>

            <!-- 启动选项 -->
            <GroupBox Header="启动选项" Margin="0,0,0,12">
                <WrapPanel>
                    <CheckBox x:Name="ChkSandbox" Content="沙箱模式" Margin="0,0,16,0"/>
                    <CheckBox x:Name="ChkFakeHW" Content="伪造硬件指纹" Margin="0,0,16,0"/>
                    <CheckBox x:Name="ChkHost"  Content="随机主机名"  Margin="0,0,16,0"/>
                    <CheckBox x:Name="ChkMac"   Content="随机 MAC 地址"/>
                </WrapPanel>
            </GroupBox>

            <!-- 输出日志 -->
            <GroupBox Header="输出日志">
                <TextBox x:Name="TxtOutput" IsReadOnly="True" FontFamily="Consolas"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         MinHeight="180" TextChanged="TxtOutput_TextChanged"/>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</ui:Page>