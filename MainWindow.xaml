<Window x:Class="VSenvDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:WindowHelper.SystemBackdropType="Mica"
        Title="VSenv Desktop" Height="580" Width="840"
        MinWidth="720" MinHeight="500"
        Loaded="Window_Loaded">
    <ui:NavigationView x:Name="NavView" IsPaneOpen="False"
                       SelectionChanged="NavView_SelectionChanged">
        <ui:NavigationView.MenuItems>
            <ui:NavigationViewItem x:Name="NavHome" Content="首页">
                <ui:NavigationViewItem.Icon>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Home}"/>
                </ui:NavigationViewItem.Icon>
            </ui:NavigationViewItem>

            <ui:NavigationViewItem x:Name="NavInstances" Content="实例管理">
                <ui:NavigationViewItem.Icon>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Code}"/>
                </ui:NavigationViewItem.Icon>
            </ui:NavigationViewItem>

            <ui:NavigationViewItem x:Name="NavAbout" Content="关于">
                <ui:NavigationViewItem.Icon>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Info}"/>
                </ui:NavigationViewItem.Icon>
            </ui:NavigationViewItem>
            
            
        </ui:NavigationView.MenuItems>

        <ui:Frame x:Name="RootFrame"/>
    </ui:NavigationView>
</Window>