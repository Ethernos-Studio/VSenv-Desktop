<Window x:Class="VSenvDesktop.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        Width="450"
        Height="300"
        WindowStartupLocation="CenterScreen"
        Opacity="0">

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" 
                                     Duration="0:0:0.3"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Border CornerRadius="12" 
            Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" 
                              Direction="0" 
                              BlurRadius="20" 
                              Color="Black" 
                              Opacity="0.3"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>

            <!-- 应用图标和标题 -->
            <StackPanel Grid.Row="0" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center">
                <Border Width="80" 
                        Height="80" 
                        CornerRadius="15" 
                        Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}">
                    <TextBlock Text="VD" 
                               FontSize="40" 
                               FontFamily="Calibri"
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>
                
                <TextBlock Text="VSenv Desktop" 
                           FontSize="28" 
                           FontWeight="SemiBold" 
                           Margin="0,20,0,0" 
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"/>
                
                <TextBlock Text="VS Code 环境管理工具" 
                           FontSize="14" 
                           Margin="0,5,0,0" 
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
            </StackPanel>

            <!-- 加载进度条 -->
            <ProgressBar Grid.Row="1" 
                         Height="4" 
                         Margin="40,30,40,0" 
                         IsIndeterminate="True"
                         Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                         Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>

            <!-- 状态文本 -->
            <TextBlock Grid.Row="2" 
                       x:Name="StatusText" 
                       Text="正在初始化..." 
                       FontSize="12" 
                       Margin="40,15,40,20" 
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>

            <!-- 版本信息 -->
            <TextBlock Grid.Row="3" 
                       Text="Version 1.0.0" 
                       FontSize="10" 
                       Margin="0,0,15,10" 
                       HorizontalAlignment="Right"
                       Foreground="{DynamicResource {x:Static SystemColors.InactiveCaptionTextBrushKey}}"/>
        </Grid>
    </Border>
</Window>